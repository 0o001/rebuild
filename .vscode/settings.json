{
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "target/**": true,
        ".github/**": true,
        ".production/**": true,
        ".eclipse/**": true
    },
    "editor.fontSize": 12,
    "editor.formatOnSave": false,

    "eslint.options": {
        "configFile": "./.eslintrc.json"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html"
    ],
    "eslint.autoFixOnSave": true
}