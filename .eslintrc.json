{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "globals": {
        "$setTimeout": true,
        "$random": true,
        "$regex": true,
        "$storage": true,
        "rb": true,
        "renderRbcomp": true,
        "React": true,
        "ReactDOM": true
    },
    "plugins": ["react"],
    "rules": {
        "indent": [1, 2],
        "linebreak-style": [1, "unix"],
        "quotes": [1, "single"],
        "semi": [1, "never"]
    }
}